# copy to .env for local testing (never commit your real key)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini

# optional for local-only runs (Actions fills these automatically)
GITHUB_TOKEN=
GITHUB_REPOSITORY=RunicWolf/gpt-pr-review-bot
PULL_REQUEST_NUMBER=1

REVIEW_MODE=comment
MAX_INLINE_COMMENTS=12
INCLUDE_RULES_PREAMBLE=true

# Filtering
INCLUDE_GLOBS=
EXCLUDE_GLOBS=**/*.lock,**/node_modules/**,**/*.min.js,**/*.map,**/dist_/**

MAX_FILES=6
MAX_PATCH_CHARS=8000
MAX_TOTAL_PATCH_CHARS=24000

# Severity gate
SEVERITY_GATE=high      # off|low|medium|high
REVIEW_MODE=review      # comment|review
MAX_INLINE_COMMENTS=12

# OpenAI
OPENAI_TEMPERATURE=0.2
OPENAI_MAX_TOKENS=800
